image:
  repository: ghcr.io/open-webui/mcphub
  tag: main
  pullPolicy: IfNotPresent
container:
  command:
    - mcphub
  args:
    - --config=/app/config.json
    - --api-key=top-secret
service:
  enabled: true
  type: ClusterIP
  port: 8000
ingress:
  enabled: true
  host: mcphub.onto.one
  tls: true
  existingSecret: wildcard-onto-one
configJson: |
  {
    "mcpServers": {
      "memory": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-memory"]
      },
      "time": {
        "command": "uvx",
        "args": ["mcp-server-time", "--local-timezone=America/New_York"]
      }
    }
  }
